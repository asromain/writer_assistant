<div class="contenu">

  <h2><%= @scene.name %></h2>

  <p>
    <strong>Name:</strong>
    <%= @scene.name %>
  </p>

  <p>
    <strong>Narrative:</strong>
    <%= @scene.narrative %>
  </p>

  <p>
    <strong>Place:</strong>
    <%= @scene.place %>
  </p>

  <p>
    <strong>Period:</strong>
    <%= @scene.period %>
  </p>

  <p>
    <strong>Chapter:</strong>
    <%= @scene.chapter_id %>
